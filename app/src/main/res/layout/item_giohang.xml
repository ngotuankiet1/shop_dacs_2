<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_giohang_image"
        android:scaleType="centerCrop"
        android:src="@drawable/iconnew_w512"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:id="@+id/item_giohang_tensp"
            android:text="Tên sản phẩm"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:weightSum="18"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_giohang_gia"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_weight="7"
                android:text="150000"
                android:textColor="@color/red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/item_giohang_tru"
                android:layout_weight="1"
                android:background="#D1D4D5"
                android:src="@drawable/ic_baseline_remove_24"
                android:layout_marginRight="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="15sp"
                android:text="1"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/item_giohang_soluong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/item_giohang_cong"
                android:src="@drawable/ic_baseline_add_24"
                android:background="#D1D4D5"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

<!--            <ImageView-->
<!--                android:layout_weight="1"-->
<!--                android:src="@drawable/ic_baseline_drag_handle_24"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"/>-->

            <TextView
                android:textSize="15sp"
                android:text="2500000"
                android:gravity="center|center_vertical"
                android:layout_weight="7"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:id="@+id/item_giohang_giasp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>